{
  "manifest_version": 3,
  "name": "AI Content Detector",
  "version": "0.2.0",
  "description": "Detect AI-generated content using local Ollama models. Privacy-first analysis with unified architecture for better performance and reliability.",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  
  "host_permissions": [
    "http://localhost:11434/*",
    "http://127.0.0.1:11434/*",
    "http://localhost:3000/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AI Content Detector (Unified Architecture)",
    "default_icon": {
      "16": "assets/icon-16.svg",
      "48": "assets/icon-48.svg",
      "128": "assets/icon-128.svg"
    }
  },
  
  "icons": {
    "16": "assets/icon-16.svg",
    "48": "assets/icon-48.svg",
    "128": "assets/icon-128.svg"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "shared/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  
  "author": "AI Content Detector Team",
  "homepage_url": "https://github.com/yourusername/ai-content-detector-extension",
  "short_name": "AI Detector",
  "minimum_chrome_version": "88",
  
  "commands": {
    "quick-analyze": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Quick analyze selected text"
    }
  }
} 