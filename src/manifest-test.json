{
  "manifest_version": 3,
  "name": "AI Content Detector Test",
  "version": "0.2.0",
  "description": "Test manifest for debugging",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "http://localhost:11434/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AI Content Detector Test",
    "default_icon": {
      "16": "assets/icon-16.svg",
      "48": "assets/icon-48.svg",
      "128": "assets/icon-128.svg"
    }
  },
  
  "icons": {
    "16": "assets/icon-16.svg",
    "48": "assets/icon-48.svg", 
    "128": "assets/icon-128.svg"
  }
} 